<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/product_background"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/listed_product"
        android:clickable="true"
            android:onClick="ViewService">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_product"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/product_image"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/product_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:layout_below="@id/product_name"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/product_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:layout_below="@id/product_location"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:maxLength="8" />

    </RelativeLayout>



</LinearLayout>
