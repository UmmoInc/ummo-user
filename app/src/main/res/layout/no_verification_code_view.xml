<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!--Intro Header Layout Start-->
        <RelativeLayout
            android:id="@+id/no_code_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/no_code_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_no_verification_code_24" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/no_code_image_view">

                <TextView
                    android:id="@+id/no_code_description_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="8dp"
                    android:text="@string/no_verification_code_msg"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>
        <!--Intro Header Layout Start-->

        <!--Intro Header Layout Start-->
        <RelativeLayout
            android:id="@+id/verify_later_relative_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/no_code_relative_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/verify_later_header_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_beta_tester_24" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/verify_later_header_image_view">

                <TextView
                    android:id="@+id/verify_later_description_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="8dp"
                    android:text="@string/verify_later"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>
        <!--Intro Header Layout Start-->
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>