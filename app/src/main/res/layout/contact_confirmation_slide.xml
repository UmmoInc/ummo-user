<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White">

    <TextView
        android:id="@+id/contact_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please  enter the code we sent you below..."
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/code_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your six-digit code"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@id/contact_confirmation"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp" />

    <!--EditText
        android:id="@+id/confirmation_code"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_prompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/Grey"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:hint="@string/enter_email"
        android:autofillHints="Email address"
        tools:targetApi="o"
        android:textCursorDrawable="@drawable/cursor"/>-->

    <com.chaos.view.PinView
        android:id="@+id/confirmation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_prompt"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="20dp"
        android:cursorVisible="true"
        app:cursorColor="@color/ummo_2"
        android:inputType="number"
        android:textSize="40sp"
        app:hideLineWhenFilled="false"
        app:itemCount="6"
        app:itemSpacing="4dp"
        app:itemWidth="48dp"
        app:lineWidth="2dp"
        app:viewType="rectangle"/>

    <ProgressBar
        android:id="@+id/confirmation_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"/>

</RelativeLayout>
