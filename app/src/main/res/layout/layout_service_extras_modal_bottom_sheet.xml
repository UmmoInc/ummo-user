<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Header Layout-->
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/service_authoring_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/service_authoring_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_stat_service_avatar" />

        <TextView
            android:id="@+id/service_authoring_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/service_authoring_image_view"
            android:layout_toEndOf="@id/service_authoring_image_view"
            android:text="@string/service_eligibility"
            android:textColor="@color/Grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/service_authoring_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_authoring_title_text_view"
            android:layout_toEndOf="@id/service_authoring_image_view"
            android:text="@string/service_eligibility_placeholder"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/service_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/service_authoring_relative_layout">

        <ImageView
            android:id="@+id/delegated_service_header_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_stat_service_avatar" />

        <TextView
            android:id="@+id/service_eligibility_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/delegated_service_header_image_view"
            android:layout_toEndOf="@id/delegated_service_header_image_view"
            android:text="@string/service_eligibility"
            android:textColor="@color/Grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/service_eligibility_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_eligibility_title_text_view"
            android:layout_toEndOf="@id/delegated_service_header_image_view"
            android:text="@string/service_eligibility_placeholder"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>