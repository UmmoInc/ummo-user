<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#eeeeee">

    <RelativeLayout
        android:id="@+id/department_ground"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/department_foreground"
        android:clickable="true"
        android:padding="10dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/department_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_below="@id/department_title"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/department_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_affairs_logo"
            android:layout_below="@id/view"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Mamelodi Service Center"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@id/department_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</LinearLayout>
