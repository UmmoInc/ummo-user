            <TextView
                android:id="@+id/contact_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:text="@string/contact_title_string"
                android:textColor="@color/greyProfile"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:background="@color/White"
                android:fontFamily="@font/rubik"
                android:padding="5dp"
                android:text="(+268) 76872520"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contact_verification_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/profile_contact"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                android:text="Unverified"
                android:paddingEnd="20dp"
                android:paddingStart="0dp"
                android:textColor="@color/Grey"
                android:textSize="10sp"
                android:fontFamily="@font/rubik"
                android:textStyle="italic"
                tools:ignore="SmallSp" />

            <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/profile_contact"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:background="@color/Grey" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:text="@string/email_title_string"
                android:textColor="@color/greyProfile"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@color/White"
                android:fontFamily="@font/rubik"
                android:padding="5dp"
                android:text="email@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/profile_email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@color/Grey" />

            <TextView
                android:id="@+id/app_version_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view4"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                android:text="Version 1.0.1 (Beta)"
                android:textColor="@color/Grey"
                android:textSize="12sp"
                android:fontFamily="@font/rubik"
                android:textStyle="italic" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/app_version_text_view"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:backgroundTint="@color/quantum_googred"
                android:enabled="true"
                android:text="Log out"
                android:textColor="@color/White"
                app:icon="@drawable/ic_log_out_24"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                tools:targetApi="lollipop" />
        </RelativeLayout>


    </ScrollView>
</layout>
