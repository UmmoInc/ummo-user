<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/White">


        <FrameLayout
            android:id="@+id/profile_pic_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/profile_pic"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="@drawable/ic_camera_alt_black_24dp"
            />


        </FrameLayout>




        <TextView
            android:id="@+id/full_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyProfile"
            android:text="@string/full_name_title_string"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_below="@id/profile_pic_box"
            android:layout_marginStart="20dp" />


        <TextView
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:drawablePadding="4dp"
            android:background="@color/White"
            android:padding="5dp"
            android:text="Jose' Rego"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/full_name_title"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:onClick="goToEditProfile"
            android:focusable="true"/>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Grey"
            android:layout_below="@id/full_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/id_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyProfile"
            android:text="@string/id_number_title_string"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/view1"
            android:layout_marginStart="20dp" />


        <TextView
            android:id="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:drawablePadding="4dp"
            android:background="@color/White"
            android:padding="5dp"
            android:text="Enter Your ID number here"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/id_number_title"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:onClick="goToEditProfile"
            android:focusable="true"/>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Grey"
            android:layout_below="@id/id_number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyProfile"
            android:text="@string/contact_title_string"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/view2"
            android:layout_marginStart="20dp" />


        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="(+268) 76872520"
            android:background="@color/White"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:padding="5dp"
            android:layout_below="@id/contact_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:onClick="goToEditProfile"/>

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Grey"
            android:layout_below="@id/contact"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyProfile"
            android:text="@string/email_title_string"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/view3"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@color/White"
            android:padding="5dp"
            android:text="email@gmail.com"
            android:layout_below="@id/email_title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:clickable="true"
            android:onClick="goToEditProfile"
            android:focusable="true" />

        <View
            android:id="@+id/view4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Grey"
            android:layout_below="@id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/rating_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyProfile"
            android:text="@string/rating_title_string"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/view4"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@color/White"
            android:padding="5dp"
            android:text="Uyaphapha"
            android:layout_below="@id/rating_title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</ScrollView>