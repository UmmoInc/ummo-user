<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/request_help_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/request_help_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whatsapp" />

        <TextView
            android:id="@+id/request_help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_help_icon"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rubik"
            android:text="Feel free to ask us anything"
            android:textColor="@color/ummo_2"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/request_help_text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@color/screenWhite" />

        <RelativeLayout
            android:id="@+id/request_help_main_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_help_text"
            android:layout_marginTop="8dp">

            <!--<TextView
                android:id="@+id/request_help_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/request_help_image_view"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@id/request_help_image_view"
                android:text="Feel free to ask us anything"
                android:textColor="@color/black"
                android:textSize="20sp" />-->

            <TextView
                android:id="@+id/request_help_main_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/ask_us_anything"
                android:textColor="#666"
                android:textSize="14sp" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_help_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/request_help_main_relative_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:text="Ask on WhatsApp"
            android:textColor="@color/White"
            android:textSize="14sp"
            app:icon="@drawable/ic_send_black_24dp"
            app:iconGravity="textEnd"
            tools:targetApi="lollipop" />

    </RelativeLayout>
</layout>