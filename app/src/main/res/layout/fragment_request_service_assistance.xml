<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/request_service_assistance_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/request_service_assistance_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sharing_is_caring_24" />

        <TextView
            android:id="@+id/request_service_assistance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_service_assistance_icon"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rubik"
            android:text="Request Assistance"
            android:textColor="@color/ummo_2"
            android:textSize="22sp" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/request_service_assistance_text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@color/screenWhite" />

        <RelativeLayout
            android:id="@+id/request_service_assistance_main_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_service_assistance_text"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/request_service_assistance_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_care_24" />

            <TextView
                android:id="@+id/request_service_assistance_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/request_service_assistance_image_view"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@id/request_service_assistance_image_view"
                android:text="For All"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/request_service_assistance_main_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/request_service_assistance_title_text_view"
                android:layout_toEndOf="@id/request_service_assistance_image_view"
                android:text="@string/show_you_care"
                android:textColor="#666"
                android:textSize="12sp" />

        </RelativeLayout>

