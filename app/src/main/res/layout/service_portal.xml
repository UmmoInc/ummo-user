<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/service_portal_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="4dp"
    app:contentPaddingTop="4dp"
    app:strokeColor="@color/Grey"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:id="@+id/portal_main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/portal_image_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_twotone_fastfood_24" />

        <TextView
            android:id="@+id/portal_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/portal_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/rubik"
            android:text="Food Court"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/portal_title_text_view"
            android:background="?android:attr/listDivider"
            android:padding="20dp" />

        <TextView
            android:id="@+id/portal_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:fontFamily="@font/rubik"
            android:text="Treat your taste buds!"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/portal_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/portal_info_text_view"
            android:fontFamily="@font/rubik"
            android:text="(4)"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>