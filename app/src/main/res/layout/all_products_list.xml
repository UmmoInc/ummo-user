<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/product">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_product"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/white_shadow_background"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normalTextColor"
        android:textSize="16sp"
        android:layout_toRightOf="@id/product_image"
        android:layout_toEndOf="@id/product_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="fdfdfd"/>
    <TextView
        android:id="@+id/product_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normalTextColor"
        android:layout_toRightOf="@id/product_image"
        android:layout_toEndOf="@+id/product_image"
        android:layout_below="@id/product_name"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/service_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normalTextColor"
        android:layout_toRightOf="@id/product_image"
        android:layout_toEndOf="@+id/product_image"
        android:layout_below="@id/product_location"
        android:textSize="12sp"
        android:maxLength="8"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"/>

    <ImageView
        android:id="@+id/request_agent_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_person_black_24dp"
        android:background="@drawable/register_next_button"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="5dp"/>



</RelativeLayout>
