<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parent_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1111"
        tools:context=".ui.fragments.publicServiceCategories.ServiceCategories">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_bar_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/Grey"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:id="@+id/portal_bar_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/portal_bar_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/rubik"
                    android:padding="5dp"
                    android:text="Welcome, User"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/portal_bar_subtitle_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/portal_bar_title_text_view"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/rubik"
                    android:text="What are you interested in today?"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--<ProgressBar
            android:id="@+id/load_portals_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/entrance_portal_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="150dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/home_bar_card_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/service_portal_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_comments_header_relative_layout"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/service_portal" />
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
