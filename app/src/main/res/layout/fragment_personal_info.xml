<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.fragments.profile.PersonalInfoFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Personal Profile"
            app:titleTextColor="@color/ummo_2" />

        <RelativeLayout
            android:id="@+id/first_name_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_tool_bar">

            <TextView
                android:id="@+id/personal_info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:text="First name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name_text_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_info_text_view"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/White"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:boxStrokeColor="@color/ummo_2"
                app:hintTextColor="@color/ummo_2"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconContentDescription="Feedback Icon"
                app:startIconDrawable="@drawable/ic_user_avatar_box_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/first_name_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:editable="false"
                    android:fontFamily="@font/rubik"
                    android:lines="1"
                    android:textColorHint="@color/ummo_2"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/last_name_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name_relative_layout">

            <TextView
                android:id="@+id/last_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:text="Surname"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_text_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_name_text_view"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/White"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:boxStrokeColor="@color/ummo_2"
                app:hintTextColor="@color/ummo_2"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconContentDescription="Feedback Icon"
                app:startIconDrawable="@drawable/ic_user_avatar_box_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/last_name_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:fontFamily="@font/rubik"
                    android:editable="false"
                    android:lines="1"
                    android:textColorHint="@color/ummo_2"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_name_relative_layout">

            <TextView
                android:id="@+id/contact_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:text="Phone number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contact_text_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_text_view"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/White"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:boxStrokeColor="@color/ummo_2"
                app:hintTextColor="@color/ummo_2"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconContentDescription="Feedback Icon"
                app:startIconDrawable="@drawable/ic_action_agent_contact_info">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:editable="false"
                    android:fontFamily="@font/rubik"
                    android:lines="1"
                    android:textColorHint="@color/ummo_2"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_relative_layout">

            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_text_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_text_view"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/White"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:boxStrokeColor="@color/ummo_2"
                app:hintTextColor="@color/ummo_2"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconContentDescription="Feedback Icon"
                app:startIconDrawable="@drawable/ic_email_grey_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:editable="false"
                    android:fontFamily="@font/rubik"
                    android:lines="1"
                    android:textColorHint="@color/ummo_2"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>